<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FAFBFD"
    tools:context=".fragment.Mine"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#FFFFFF"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/head"
            android:layout_marginTop="10dp"
            android:layout_marginStart="10dp"
            android:layout_marginBottom="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/pig" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginStart="20dp"
            android:orientation="vertical">
            <TextView
                android:id="@+id/uName"
                android:text="李狗蛋"
                android:textStyle="bold"
                android:textSize="18sp"
                android:textColor="#000000"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <TextView
                android:id="@+id/uID"
                android:text="001"
                android:layout_marginTop="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

        </LinearLayout>

    </LinearLayout>

    <View
        android:layout_width="fill_parent"
        android:layout_height="1dp"
        android:background="#aa000000" />

    <TextView
        android:id="@+id/edit_userInfo"
        android:layout_marginTop="5dp"
        android:text="    修改个人信息"
        android:textColor="#000000"
        android:textSize="14sp"
        android:gravity="start|center"
        android:background="@drawable/click_bg"
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:paddingEnd="5dp"
        app:drawableEndCompat="@drawable/right1" />

    <View
        android:layout_width="fill_parent"
        android:layout_height="1dp"
        android:layout_marginTop="1dp"
        android:layout_marginBottom="1dp"
        android:background="#dcdcdc" />

    <TextView
        android:id="@+id/myPosting"
        android:layout_marginTop="3dp"
        android:text="    查看我的帖子"
        android:textColor="#000000"
        android:textSize="14sp"
        android:gravity="start|center"
        android:paddingEnd="5dp"
        app:drawableEndCompat="@drawable/right1"
        android:background="@drawable/click_bg"
        android:layout_width="match_parent"
        android:layout_height="35dp"/>

    <View
        android:layout_width="fill_parent"
        android:layout_height="1dp"
        android:layout_marginTop="1dp"
        android:layout_marginBottom="1dp"
        android:background="#dcdcdc" />

    <TextView
        android:id="@+id/editPwd"
        android:layout_marginTop="3dp"
        android:text="    修改账号密码"
        android:textColor="#000000"
        android:textSize="14sp"
        android:gravity="start|center"
        android:paddingEnd="5dp"
        app:drawableEndCompat="@drawable/right1"
        android:background="@drawable/click_bg"
        android:layout_width="match_parent"
        android:layout_height="35dp"/>

    <View
        android:layout_width="fill_parent"
        android:layout_height="1dp"
        android:layout_marginTop="1dp"
        android:layout_marginBottom="1dp"
        android:background="#dcdcdc" />

    <TextView
        android:id="@+id/safeQuestion"
        android:layout_marginTop="3dp"
        android:text="    完善密保信息"
        android:textColor="#000000"
        android:textSize="14sp"
        android:gravity="start|center"
        android:paddingEnd="5dp"
        app:drawableEndCompat="@drawable/right1"
        android:background="@drawable/click_bg"
        android:layout_width="match_parent"
        android:layout_height="35dp"/>

    <View
        android:id="@+id/view"
        android:layout_width="fill_parent"
        android:layout_height="1dp"
        android:layout_marginTop="1dp"
        android:layout_marginBottom="1dp"
        android:background="#dcdcdc" />

    <TextView
        android:id="@+id/managerUser"
        android:layout_marginTop="3dp"
        android:text="    用户管理"
        android:textColor="#000000"
        android:textSize="14sp"
        android:gravity="start|center"
        android:paddingEnd="5dp"
        app:drawableEndCompat="@drawable/right1"
        android:background="@drawable/click_bg"
        android:layout_width="match_parent"
        android:layout_height="35dp"/>

    <View
        android:layout_width="fill_parent"
        android:layout_height="1dp"
        android:layout_marginTop="1dp"
        android:layout_marginBottom="1dp"
        android:background="#dcdcdc" />

    <TextView
        android:id="@+id/collection"
        android:layout_marginTop="3dp"
        android:text="    我的收藏"
        android:textColor="#000000"
        android:textSize="14sp"
        android:gravity="start|center"
        android:paddingEnd="5dp"
        app:drawableEndCompat="@drawable/right1"
        android:background="@drawable/click_bg"
        android:layout_width="match_parent"
        android:layout_height="35dp"/>

    <View
        android:layout_width="fill_parent"
        android:layout_height="1dp"
        android:layout_marginTop="1dp"
        android:layout_marginBottom="1dp"
        android:background="#dcdcdc" />

    <TextView
        android:id="@+id/aboutUs"
        android:layout_marginTop="3dp"
        android:text="    关于我们"
        android:textColor="#000000"
        android:textSize="14sp"
        android:gravity="start|center"
        android:paddingEnd="5dp"
        app:drawableEndCompat="@drawable/right1"
        android:background="@drawable/click_bg"
        android:layout_width="match_parent"
        android:layout_height="35dp"/>

    <View
        android:layout_width="fill_parent"
        android:layout_height="1dp"
        android:layout_marginTop="1dp"
        android:layout_marginBottom="1dp"
        android:background="#dcdcdc" />

    <TextView
        android:id="@+id/login_out"
        android:layout_marginTop="3dp"
        android:text="    注销登录"
        android:textColor="#000000"
        android:textSize="14sp"
        android:gravity="start|center"
        android:paddingEnd="5dp"
        app:drawableEndCompat="@drawable/right1"
        android:background="@drawable/click_bg"
        android:layout_width="match_parent"
        android:layout_height="35dp"/>

    <View
        android:layout_width="fill_parent"
        android:layout_height="1dp"
        android:layout_marginTop="1dp"
        android:layout_marginBottom="1dp"
        android:background="#dcdcdc" />

</LinearLayout>